<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/times"
        android:layout_marginEnd="411dp"
        android:layout_marginRight="411dp"
        android:text="*"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="45dp" />

    <Button
        android:id="@+id/minus"
        android:text="-"
        tools:layout_editor_absoluteX="255dp"
        tools:layout_editor_absoluteY="134dp" />

    <Button
        android:id="@+id/plus"
        android:text="+"
        tools:layout_editor_absoluteY="134dp" />

    <Button
        android:id="@+id/divided_by"
        android:layout_width="8dp"
        android:layout_height="4dp"
        android:text="/"
        tools:layout_editor_absoluteX="325dp"
        tools:layout_editor_absoluteY="742dp" />

    <TextView
        android:id="@+id/textView_operation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text=""
        android:textSize="30dp"
        tools:layout_editor_absoluteX="216dp"
        tools:layout_editor_absoluteY="93dp" />

    <EditText
        android:id="@+id/editText_x2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberSigned|number|numberDecimal"
        tools:layout_editor_absoluteX="110dp"
        tools:layout_editor_absoluteY="182dp"
        tools:text="0" />

    <EditText
        android:id="@+id/editText_x1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberSigned|number|numberDecimal"
        android:text="0"
        tools:layout_editor_absoluteX="110dp"
        tools:text="0" />

    <TextView
        android:id="@+id/textView_equals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="="
        android:textSize="30dp"
        tools:layout_editor_absoluteX="208dp"
        tools:layout_editor_absoluteY="227dp" />

    <TextView
        android:id="@+id/textView_Y"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Y"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="211dp"
        tools:layout_editor_absoluteY="486dp" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="5"
        android:rowCount="7"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="0dp">

    </GridLayout>


</android.support.constraint.ConstraintLayout>